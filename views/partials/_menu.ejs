<header class="header-area dark-theme">
  <div class="container-fluid">
    <div class="row ">

      <div class=" col-md-5 col-sm-3">
        <div class="logo">
          <a href="/"><span class="lens-logo dark-theme">lens</span><br><span>light</span></a>
        </div>
      </div>
      <div class="ml-auto col-md-7 col-sm-9">
        <div class="navbar-area w-100 d-flex justify-content-end">
          <nav class="site-navbar">
            <ul>
              <li><a class="<%= link === 'index' && 'active' %>" href="/">Home</a></li>
              <li><a class="<%= link === 'about' && 'active' %>" href="/about">About</a></li>
              <li><a class="<%= link === 'photos' && 'active' %>" href="/photos">Photos</a></li>
              <% if(user) { %>
              <li><a class="<%= link === 'panel' && 'active' %>" href="/panel">Panel</a></li>
              <li><a href="/logout">Logout</a></li>
              <% } else { %>
              <li><a class="<%= link === 'login' && 'active' %>" href="/login">Login</a></li>
              <li><a class="<%= link === 'register' && 'active' %>" href="/register">Register</a></li>
              <% }  %>
            </ul>
            <button class="nav-toggler dark-theme">
              <span class="dark-theme"></span>
            </button>
          </nav>
        </div>
      </div>
    </div>
  </div>
</header>